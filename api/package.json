{
  "name": "api",
  "type": "module",
  "scripts": {
    "build": "run-s build:cf-typegen build:gen-schema typecheck",
    "build:cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "build:gen-schema": "pnpm --filter quiz-api-spec build && pnpm format",
    "deploy": "wrangler deploy --minify",
    "dev": "wrangler dev",
    "format": "biome check --write .",
    "lint": "biome check .",
    "test": "run-p test:*",
    "test:api": "jest --config=jest.config.cjs",
    "test:api:watch": "pnpm test:api --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.8.10",
    "neverthrow": "^8.2.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@tsconfig/strictest": "^2.0.5",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "npm-run-all2": "^8.0.4",
    "pactum": "^3.7.1",
    "ts-jest": "^29.0.0",
    "typescript": "^5.9.2",
    "wrangler": "^4.27.0"
  }
}
