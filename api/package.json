{
  "name": "api",
  "type": "module",
  "scripts": {
    "build": "run-s build:cf-typegen build:gen-schema typecheck",
    "build:cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "build:gen-schema": "pnpm --filter quiz-api-spec build && pnpm format",
    "db:mig:apply": "wrangler d1 migrations apply quiz-db --local --log-level info",
    "db:mig:create": "wrangler d1 migrations create quiz-db init --log-level info",
    "db:reset": "rm -rf .wrangler/state && pnpm db:mig:apply && pnpm db:seed",
    "db:seed": "wrangler d1 execute quiz-db --local --file migrations/dev/seed.sql --log-level info",
    "db:seed:verbose": "wrangler d1 execute quiz-db --local --file migrations/dev/seed.sql --log-level debug",
    "deploy": "wrangler deploy --minify --log-level info",
    "deploy:dev": "wrangler deploy --env dev --log-level debug",
    "deploy:test": "wrangler deploy --env test --log-level info",
    "deploy:prod": "wrangler deploy --minify --log-level warn",
    "dev": "wrangler dev --env dev --log-level debug",
    "dev:quiet": "wrangler dev --env dev --log-level warn",
    "logs": "wrangler tail --log-level info",
    "logs:dev": "wrangler tail --env dev --log-level debug",
    "logs:prod": "wrangler tail --log-level warn",
    "format": "biome check --write .",
    "lint": "biome check .",
    "test": "run-p test:*",
    "test:bdd": "vitest run --coverage --config=vitest.bdd.config.ts",
    "test:bdd:watch": "vitest --config=vitest.bdd.config.ts --ui --open --watch --coverage",
    "test:tdd": "vitest run --coverage",
    "test:tdd:watch": "vitest --ui --open --watch --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.9.0",
    "neverthrow": "^8.2.0",
    "qs": "^6.14.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^20.19.10",
    "@types/qs": "^6.14.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.0.0",
    "npm-run-all2": "^8.0.4",
    "pactum": "^3.8.0",
    "pactum-matchers": "^1.1.7",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.28.1"
  }
}
