{
  "name": "api",
  "type": "module",
  "scripts": {
    "build": "run-s build:cf-typegen build:gen-schema typecheck",
    "build:cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "build:gen-schema": "pnpm --filter quiz-api-spec build && pnpm format",
    "deploy": "wrangler deploy --minify",
    "dev": "wrangler dev",
    "format": "biome check --write .",
    "lint": "biome check .",
    "test": "run-p test:*",
    "db:mig:create": "wrangler d1 migrations create quiz-db init",
    "db:mig:apply": "wrangler d1 migrations apply quiz-db --local",
    "db:seed": "wrangler d1 execute quiz-db --local --file migrations/dev/seed.sql",
    "db:reset": "rm -rf .wrangler/state && pnpm db:mig:apply && pnpm db:seed",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:bdd": "vitest run --config=vitest.bdd.config.ts",
    "test:bdd:watch": "vitest --config=vitest.bdd.config.ts",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "hono": "^4.9.0",
    "neverthrow": "^8.2.0",
    "zod": "^4.0.16"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^20.19.10",
    "@vitest/coverage-v8": "^2.1.8",
    "jsdom": "^26.0.0",
    "npm-run-all2": "^8.0.4",
    "pactum": "^3.8.0",
    "pactum-matchers": "^1.1.7",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8",
    "wrangler": "^4.28.1"
  }
}
