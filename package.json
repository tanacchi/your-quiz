{
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@stryker-mutator/core": "^9.0.1",
    "@stryker-mutator/typescript-checker": "^9.0.1",
    "@stryker-mutator/vitest-runner": "^9.0.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^20.19.10",
    "diff": "^8.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "markdownlint": "^0.38.0",
    "markdownlint-cli2": "^0.18.1",
    "npm-run-all2": "^8.0.4",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:api": "pnpm --filter api build",
    "build:ui": "pnpm --filter ui build",
    "dev": "run-p dev:*",
    "dev:api": "pnpm --filter api dev",
    "dev:ui": "pnpm --filter ui dev",
    "format": "run-p format:*",
    "format:biome": "biome check --write --unsafe",
    "format:md": "markdownlint-cli2 '**/*.md' --fix",
    "lint": "run-p lint:*",
    "lint:biome": "biome check",
    "lint:md": "sh ./scripts/lint-md.sh",
    "prepare": "husky",
    "test": "run-p test:*",
    "test:api": "pnpm --filter api test",
    "test:ui": "pnpm --filter ui test",
    "test:scripts": "vitest run scripts/",
    "mutation-test": "pnpm --filter api mutation-test",
    "mutation-report": "tsx scripts/mutation-test/survivor-reporter.ts reports/mutation/mutation-report.json reports/mutation-analysis"
  }
}
